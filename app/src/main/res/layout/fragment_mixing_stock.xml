<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RequestForMixingFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Select Material Type"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvTypeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sf_ui_regular"
                android:text="Select View Option"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvOptionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlFromMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/edFromMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:editable="false"
                        android:hint="From Month"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvFromMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlToMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/edToMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:editable="false"
                        android:hint="To Month"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvToMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/edFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:editable="false"
                        android:hint="From Date"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/edToDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_date"
                        android:drawablePadding="5dp"
                        android:editable="false"
                        android:hint="To Date"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sf_ui_bold"
                android:gravity="start"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:text="Stock Date : "
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@drawable/rounded_corner_button"
                android:text="Search"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHoriz"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_bold"
            android:text="Mat Name"
            android:paddingLeft="5dp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_bold"
            android:gravity="center"
            android:text="Opening Stock"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_bold"
            android:gravity="center"
            android:text="Prod Qty"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_bold"
            android:gravity="center"
            android:text="Issue Qty"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_bold"
            android:gravity="center"
            android:text="Closing Qty"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutHoriz"
        android:layout_above="@+id/btnDayEndProcess"
         />

    <Button
        android:id="@+id/btnDayEndProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="@drawable/rounded_corner_button"
        android:fontFamily="@font/sf_ui_bold"
        android:text="Day End Process"
        android:textColor="@color/colorWhite" />

</RelativeLayout>