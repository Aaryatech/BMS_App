<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                    android:id="@+id/tvProductId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_bold"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_ui_bold"
                android:text="Pending"
                android:gravity="end"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:fontFamily="@font/sf_ui_regular"
                android:text="15/4/2019 to 18/4/2019" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvIsPlane"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_planing"
                android:drawablePadding="10dp"
                android:fontFamily="@font/sf_ui_regular"
                android:text="15/4/2019 to 18/4/2019" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCatName"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_cat_name"
            android:drawablePadding="10dp"
            android:fontFamily="@font/sf_ui_regular"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/ivMixing"
                android:layout_width="50dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_blue_shap"
                android:fontFamily="@font/sf_ui_bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:padding="1dp"
                android:text="Mixing" />

            <TextView
                android:id="@+id/ivStore"
                android:layout_width="50dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_red_shap"
                android:fontFamily="@font/sf_ui_bold"
                android:gravity="center"
                android:padding="1dp"
                android:text="Store" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>